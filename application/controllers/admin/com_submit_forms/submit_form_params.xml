			<validation rules="trim" />

		</param>

		<param name="sfpsm_user_submit_save_into_db_success" type="textarea" default="Your message was successfully received!" label="sfpsm_user_submit_saved_into_db" tip="tip_sfpsm_user_submit_saved_into_db">

			<validation rules="trim" />

		</param>



		<param name="sfpsm_user_submit_save_into_db_error_title" type="textarea" default="An error occurred while saving the message!" label="sfpsm_user_submit_save_into_db_error_title" tip="tip_sfpsm_user_submit_save_into_db_error_title">

			<validation rules="trim" />

		</param>

